    <div class="container">
        <h2 class="form-title">Agregar un producto</h2>
        <form class="upload-form" id="productForm">
            <input class="input" type="text" name="title" id="titleInput" placeholder="Título"/>

            <div class="divider"></div>

            <input class="input" type="text" name="price" id="priceInput" placeholder="Precio" />

            <div class="divider"></div>

            <input class="input" type="text" name="thumbnail" id="thumbnailInput" placeholder="Photo del producto"/>

            <input class="btn" value="Agregar" onclick="addBtnClicked()" />
        </form>

        <br>
        <br>
        
        <div class="list-container">
            <div id="list-section" class="product-list">
                <p class="form-title">Lista de productos</p>
            </div>
        </div>

        <br>
        <br>

        <div class="list-container">
            <div class="product-list">
                <p class="form-title">Chat</p>
                <input class="user-input" type="text" name="user" id="userInput" placeholder="Ingrese su email"/>
                <div id="list-chat">

                </div>
                <input class="user-input" type="text" name="message" id="messageInput" placeholder="Escribí aquí tu mensaje"/>
                <button class="btn" value="Agregar" onclick="sendBtnClicked()">Enviar</button>
            </div>
        </div>
    </div>
    