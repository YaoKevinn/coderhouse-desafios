<div class="container">
    <div class="product-list">
        <p class="form-title">Lista de productos</p>
        {{#if products}}
                {{#each products}}
                <div class="row">
                    <b>{{this.title}}</b>
                    <p>{{this.price}}</p>
                    <img class="product-img" src="{{this.thumbnail}}" />
                </div>
                {{/each}}
        {{else}}
            <p>No hay productos</p>
        {{/if}}
        <button id="homeBtn" class="product-list-btn" onclick="window.location.href = 'http://localhost:8080/'">Agregar un nuevo producto</button>
    </div>

    <br>
    <br>
        
    <span>*** Utilizando Handlebars ***</span>
</div>