<%- include("partials/header.ejs") %>

<div class="container">
    <div class="product-list">
        <p class="form-title">Lista de productos</p>
        <% if (products.length !== 0) { %>
            <% products.forEach(product => { %>
                <div class="row">
                    <b><%= product.title %></b>
                    <p><%= product.price %></p>
                    <img class="product-img" src=<%= product.thumbnail %> />
                </div>
                <% }) %>
        <% } else { %>
            <p>No hay productos</p>
        <% } %>
        <button id="homeBtn" class="product-list-btn" onclick="window.location.href = 'http://localhost:8080/'">Agregar un nuevo producto</button>
    </div>

    <br>
    <br>
    
    <span>*** Utilizando Ejs ***</span>
</div>

<%- include("partials/footer.ejs") %>