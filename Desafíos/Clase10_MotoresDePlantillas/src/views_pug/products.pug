html
head
  title Lista de productos
  link(rel='stylesheet' href='/css/styles.css')
.container
  .product-list
    p.form-title Lista de productos
    if products.length !== 0
        each product in products
            .row
                b=product.title
                p=product.price
                img.product-img(src=product.thumbnail)
    else
        p No hay productos

    button#homeBtn.product-list-btn Agregar un nuevo producto
script(src='/js/products.js')
